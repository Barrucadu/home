#!/bin/bash
#
# /etc/rc.shutdown
#

. /etc/rc.conf
. /etc/rc.d/functions

if [ `whoami` != "root" ]; then
	echo "Only superuser can do this"
	exit 1
fi

run_hook shutdown_start

# avoid staircase effect
/bin/stty onlcr

echo " "
printhl "Initiating Shutdown..."
echo " "

# Find daemons NOT in the DAEMONS array. Shut these down first
if [ -d /var/run/daemons ]; then
	for daemon in $(/bin/ls -1t /var/run/daemons); do
		if ! in_array $daemon ${DAEMONS[@]}; then
			stop_daemon $daemon
		fi
	done
fi
# Shutdown daemons in reverse order
let i=${#DAEMONS[@]}-1
while [ $i -ge 0 ]; do
	if [ "${DAEMONS[$i]:0:1}" != '!' ]; then
		ck_daemon ${DAEMONS[$i]#@} || stop_daemon ${DAEMONS[$i]#@}
	fi
	let i=i-1
done

# Terminate all processes
stat_busy "Sending SIGTERM To Processes"
run_hook shutdown_prekillall
/sbin/killall5 -15 &> /dev/null
/bin/sleep 5
stat_done

stat_busy "Sending SIGKILL To Processes"
/sbin/killall5 -9 &> /dev/null
/bin/sleep 1
stat_done

run_hook shutdown_postkillall

#only do this if urandom actually does exist
if [ -e /dev/urandom ]; then
  stat_busy "Saving Random Seed"
  RANDOM_SEED=/var/run/random-seed
  
  [ -d $(dirname $RANDOM_SEED) ] || mkdir -p $(dirname $RANDOM_SEED)
  : > $RANDOM_SEED
  /bin/chmod 0600 $RANDOM_SEED
  
  POOL_SIZE=600
  /bin/dd if=/dev/urandom of=$RANDOM_SEED count=1 bs=$POOL_SIZE &> /dev/null
  stat_done
fi

run_hook shutdown_poweroff

# Power off or reboot
CALLEDAS= echo $0 | sed 's@.*/\(.*$\)@\1@'
if [ "$CALLEDAS" = "halt" ]; then
	printsep
	printhl "${C_H2}POWER OFF"
	/sbin/internal_halt
else
	printsep
	printhl "${C_H2}REBOOTING"
	/sbin/internal_reboot
fi

