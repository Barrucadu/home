## -*- shell-script -*-

# Short aliases
alias !='sudo'
alias c='clear'
alias e='exit'
alias o=$EDITOR
alias O='sudoedit'
alias g='git'
alias m='smartmosh'
alias t='task'
alias '?'='status'

# Pipeline
alias -g '.G'='| grep'
alias -g '.S'='| sed'
alias -g '.A'='| awk'
alias -g '.L'='2>&1 | less -FXS'
alias -g '.H'='2>&1 | head'
alias -g '.T'='2>&1 | tail'
alias -g '.1'='2>&1'

# Basic commands
alias su='sudo su - '
alias free='free -ht'
alias df='df -h'
alias grep='grep --color=tty -d skip'
alias top='htop'

# File management
if $IS_GNULINUX; then
  alias ls='ls --color=auto'
  alias la='ls --color=auto -lA'
else
  alias la='ls -lA'
fi
alias lls='env ls'
alias cp='cp -rpv'
alias mv='mv -v'
alias mkdir='mkdir -p'

# Programming
alias val='valgrind --tool=memcheck --leak-check=full --show-reachable=yes'
alias gdb='gdb -ex run -ex backtrace --args'
alias gopp='go tool pprof'

# Nix
alias nixos-up='sudo nixos-rebuild switch --upgrade'
alias nixos-gc='sudo nix-collect-garbage -d && sudo nix-store --optimise'

# Power management
if has systemctl; then
  alias shutdown='systemctl poweroff'
  alias reboot='systemctl reboot'
else
  alias shutdown='sudo shutdown -hP now'
  alias reboot='sudo reboot'
fi

# hledger
alias bal='hledger balance -MB --tree'

# Miscellanious
alias reload='source ~/.zshrc'
alias xreload='xrdb -load ~/.Xdefaults'
alias columns='column -c `tput cols`'
alias pgfl='pgrep -fl'
