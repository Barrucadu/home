## -*- shell-script -*-

# Short aliases
alias !='sudo'
alias c='clear'
alias e='exit'
alias o=$EDITOR
alias g='git'
alias m='mosh'
alias '?'='status'
alias G=grep

# Pipeline
alias -g '.G'='| grep'
alias -g '.S'='| sed'
alias -g '.A'='| awk'
alias -g '.U'='| sort | uniq'
alias -g '.F'="| fzf"
alias -g '.L'='2>&1 | less'
alias -g '.H'='2>&1 | head'
alias -g '.T'='2>&1 | tail'
alias -g '.1'='2>&1'

# I can't spell
alias -g gerp='grep'

# Basic commands
alias su='sudo su - '
alias free='free -ht'
alias df='df -h'
alias du='du -shc'
alias grep='grep --color=tty -d skip'
alias top='htop'

# File management
if $IS_GNULINUX; then
  alias ls='ls --color=auto'
  alias la='ls --color=auto -lA'
else
  alias ls='ls -G'
  alias la='ls -GlA'
fi
alias lls='env ls'
alias cp='cp -rpv'
alias mv='mv -v'
alias mkdir='mkdir -p'

# Nix
alias nixos-up='sudo nixos-rebuild switch --upgrade'
alias nixos-gc='sudo nix-collect-garbage -d && sudo nix-store --optimise'

# hledger
alias bal="hledger balance -M --tree"
alias forecast="hledger balance -M -H --tree --forecast --end 'next year'"

# Miscellanious
alias din='docker run -it --rm'
alias ta='tmux attach-session -d -t'
alias reload='source ~/.zshenv; source ~/.zshrc'
alias pgfl='pgrep -fl'
alias jctl='sudo journalctl'
alias sctl='sudo systemctl'
