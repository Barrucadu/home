## -*- shell-script -*-

function command_not_found_handler() {
  if has dwim; then
    # Use my "do-what-I-mean" function if it's available.
    dwim $*
  elif has command-not-found; then
    # Use the nixos command-not-found script to suggest a package, or
    # report the error if unknown.
    command-not-found $1
  else
    # Just tell the user off
    echo "$1: command not found" >&2
  fi
}
