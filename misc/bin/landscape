#!/bin/zsh

# Configure the display to be one landscapemonitor.

# Rotate
xrandr --output DVI-I-2 --rotate normal

# Wallpaper
WALLPAPERDIR=${1:-/mnt/data/wallpaper}
LANDDIR=$WALLPAPERDIR/landscape

if [[ ! -d $LANDDIR ]]; then
    echo "Missing wallpaper directory"
    exit
fi

feh --bg-scale "$LANDDIR/`ls $LANDDIR | shuf -n1`"

herbstclient detect_monitors
