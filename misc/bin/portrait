#!/bin/zsh

# Configure the display to be one portrait monitor.

# Rotate
xrandr --output DVI-I-2 --rotate left

# Wallpaper
WALLPAPERDIR=${1:-/mnt/data/wallpaper}
PORTDIR=$WALLPAPERDIR/portrait

if [[ ! -d $PORTDIR ]]; then
    echo "Missing wallpaper directory"
    exit
fi

feh --bg-scale "$PORTDIR/`ls $PORTDIR | shuf -n1`"

herbstclient detect_monitors
