#!/bin/bash

load=`cat /proc/loadavg`

last1=`echo $load | cut -d' ' -f1`
last5=`echo $load | cut -d' ' -f2`
last10=`echo $load | cut -d' ' -f3`
last10=`echo $load | cut -d' ' -f3`
running=`echo $load | cut -d' ' -f4 | cut -d'/' -f1`
total=`echo $load | cut -d' ' -f4 | cut -d'/' -f2`
lastpid=`echo $load | cut -d' ' -f5`

echo "Load averages: $last1 $last5 $last10"
echo "Running processes: $running of $total"
echo "Last assigned pid: $lastpid"
