#!/usr/bin/env python

import sys, random

def isint(value):
	try:
		if str(int(value)) == value:
			return True
		else:
			return False
	except ValueError:
		return False

def toint(value):
	if isint(value):
		return int(value)
	else:
		return 0

def rolldie(rolls, sides, modifierstr, modifier, verbose):
	if modifierstr == "":
		modifier = 0
		modifierstr = "+0"

	output = "Rolling a " + str(sides) + "-sided die " + str(rolls) + " times, with a modifier of " + modifierstr + ":"
	total = 0

	for i in range(0, rolls):
		roll = random.randint(1, sides)
		output += " " + str(roll)
		total += roll

	output += ". Total: " + str(total + modifier) + ". Mean Roll: " + str(round(float(total) / rolls, 2))

	if verbose == True:
		return output
	else:
		return toint(total)

def prepdie(diestring, verbose):
	if isint(diestring):
		return toint(diestring)
	else:
		rolls       = ""
		sides       = ""
		modifier    = 0
		modifierstr = ""

		cur = "rolls"
		loop = True
		for i in range(0, len(diestring)):
			if loop == True:
				if isint(diestring[i]):
					if cur == "rolls":
						rolls += diestring[i]
					else:
						sides += diestring[i]
				elif diestring[i] == "d":
					if cur == "rolls":
						cur = "sides"
					else:
						print "Invalid die string."
						exit
				elif diestring[i] == "+":
					loop = False
					modifier = prepdie(diestring[i + 1:], False)
					modifierstr = diestring[i:]
				elif diestring[i] == "-":
					loop = False
					modifier = -prepdie(diestring[i + 1:], False)
					modifierstr = diestring[i:]

		rolls    = toint(rolls)
		sides    = toint(sides)

		if rolls == 0:
			rolls = 1
		if sides == 0:
			sides = 6

		return rolldie(rolls, sides, modifierstr, modifier, verbose)

for arg in sys.argv:
	if not arg == sys.argv[0]:
		print prepdie(arg, True)
