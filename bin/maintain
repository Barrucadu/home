#!/bin/zsh

# Aliases and stuff...
. ~/.config/zsh/aliases
. ~/.config/zsh/functions

# Update
sudo pacman -Syu
abs

# Git repositories
gith
gitbar

# Clean up
deorphan
sudo /etc/cron.weekly/packagecache.sh
sudo localepurge
sudo pacman -Sc --cachedir /share/eihort/pacman-cache

# General maintenence
scp /etc/pacman.conf barrucadu@eihort:/home/barrucadu/pacman_laptop.conf
sudo pacman-optimize
sudo mandb
sudo ldconfig -v
sudo updatedb
sudo sync
