#!/bin/zsh

# Update
sudo pacman -Syu
abs

# Clean up
sudo pacman -Rsc $(pacman -Qtdq)
sudo /etc/cron.weekly/packagecache.sh
sudo localepurge
sudo pacman -Sc --cachedir /share/eihort/pacman-cache

# General maintenence
scp /etc/pacman.conf barrucadu@eihort:/home/barrucadu/pacman_laptop.conf
sudo pacman-optimize
sudo mandb
sudo ldconfig -v
sudo updatedb
sudo sync
