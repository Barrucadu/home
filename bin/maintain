#!/bin/zsh

# Aliases and stuff...
. ~/.config/zsh/aliases
. ~/.config/zsh/functions

# Update
sudo pacman -Syu

# Git repositories
gith
gitbar

# Clean up
deorphan
sudo /etc/cron.weekly/packagecache.sh
sudo localepurge
sudo pacman -Sc --cachedir /share/eihort/pacman-cache

# General maintenence
sudo pacman-optimize
sudo updatedb
sudo sync
