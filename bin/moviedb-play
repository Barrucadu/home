#!/bin/zsh

function play ()
{
    file="`moviedb-query file $*`"

    if [[ -e $file ]]; then
	$MOVIEPLAYER $file &>/dev/null &
    else
	return 1
    fi
}

function help ()
{
    echo "moviedb-play: A tool to play movies in the filesystem database."
    echo
    echo "Usage: moviedb-play <movie>"
    echo
    echo "Return codes:"
    echo "    1 = Cannot find movie."
    echo
    echo "Maintainer: Michael Walker"
}

if [[ "$1" == "" ]] || [[ "$1" == "help" ]]; then
    help
    return 0
fi

play $*
return $?
