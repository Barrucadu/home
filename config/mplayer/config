[default]
# Audio/Video settings
ao=alsa
vo=xv,x11
fs=1
zoom=1

# Subtitle settings
ass=yes
embeddedfonts=yes
fontconfig=yes

# Misc settings
nolirc=yes
really-quiet=1
stop-xscreensaver=1

[anime]
# Most anime uses the second audio (for Japanese) and first subtitle tracks (though many use the first subtitle track for audio lyrics, and the second for everything)
aid=1
sid=0

[dvd]
# Basic DVD settings
dvd-device=/dev/dvd
nocache=1
