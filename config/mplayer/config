[default]
# Autio/Video settings
ao=alsa
vo=xv,x11
fs=1

# Subtitle settings
ass=yes
embeddedfonts=yes
fontconfig=yes

# Misc settings
nolirc=yes
really-quiet=1
stop-xscreensaver=1

[anime]
# Most anime uses the second audio and subtitle tracks (first subtitle track usually just being music lyrics)
aid=1
sid=1

[dvd]
# Basic DVD settings
dvd-device=/dev/hda
nocahe=1
