#!/bin/zsh

# X

source ~/.xprofile

if [ -d /etc/X11/xinit/xinitrc.d ]; then
  for f in /etc/X11/xinit/xinitrc.d/*; do
    [ -x "$f" ] && . "$f"
  done
  unset f
fi

# /X

# APPS

urxvtd -q -f -o

randombg

# /APPS

# WM

for winman in $WM herbstluftwm openbox twm; do
    if [[ -x `which $winman` ]]; then
        exec $winman
    fi
done

echo "No window manager. Correct issue and delete ~/.noX to re-enable auto-start."
touch ~/.noX

# /WM
