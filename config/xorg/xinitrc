#!/bin/zsh

# X

source ~/.xprofile

if [ -d /etc/X11/xinit/xinitrc.d ]; then
  for f in /etc/X11/xinit/xinitrc.d/*; do
    [ -x "$f" ] && . "$f"
  done
  unset f
fi

# /X

# APPS

urxvtd -q -f -o

randombg

# /APPS

# WM

if [[ "$WM" != "" ]]; then
    urxvt &
    exec $WM
else
    exec herbstluftwm
    #exec xmonad
fi

# /WM
