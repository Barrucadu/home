## -*- shell-script -*-

# Short aliases
alias !='sudo'
alias c='clear'
alias e='exit'
alias o=$EDITOR
alias O='sudoedit'

# Basic commands
alias su='su - '
alias free='free -mt'
alias grep='grep --color=tty -d skip'
alias top='htop'

# File management
alias ls='ls --color=auto'
alias lls='/bin/ls'
alias la='ls --color=auto -lA'
alias cp='cp -rpv'
alias mv='mv -v'
alias locate='locate -e -L'
alias mkdir='mkdir -p'

# Security
alias gpgsig='gpg -a --detach-sign'
alias gpgasc='gpg -e -r 9F58FC68 -a'

# Coding
alias g99="gcc $CFLAGS -std=c99"
alias g89="gcc $CFLAGS -std=c89"
alias gcc=g99
alias g++="g++ $CXXFLAGS"
alias ghc='ghc -Wall -fno-warn-unused-do-bind'
alias val='valgrind --tool=memcheck --leak-check=full --show-reachable=yes'
alias gdb='gdb -ex run -ex backtrace --args'

# *TeX
alias xel='xelatex'
alias bib='bibtex'

# Miscellanious
alias shutdown='sudo shutdown -hP now'
alias reboot='sudo reboot'
alias reload='source ~/.zshrc'
alias xreload='xrdb -load ~/projects/home/config/xorg/Xdefaults'
alias pumount='pmount -u'
