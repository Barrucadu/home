## -*- shell-script -*-

# Running programs
function r()
{
    $* &>/dev/null &
    disown %%
}

function re()
{
    $* &>/dev/null &
    disown %%
    exit
}

# Security
function sign-key ()
{
    key=$1
    keyserver=pgp.mit.edu

    gpg --keyserver $keyserver --recv-key $key &&
    gpg --sign-key $key &&
    gpg --keyserver $keyserver --send-key $key
}
