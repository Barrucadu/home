## -*- shell-script -*-
# Global (in-line) aliases
alias -g G='| grep'
alias -g M='| most'
alias -g X='| xargs'
alias -g H='| head'
alias -g T='| tail'
alias -g S='| sed'
alias -g F='for file in *; do'
alias -g W='| wc -l'

# Short aliases
alias !='sudo'
alias @='uzbl --uri'
alias c='clear'
alias e='exit'
alias o='emacs'
alias O='sudo emacs'
alias t='todo'

# Basic commands
alias su='su - '
alias free='free -mt'
alias grep='grep --color=tty -d skip'
alias top='htop'
alias weechat='weechat-curses irc://eihort'
      # File management
alias ls='ls --color=auto'
alias la='ls --color=auto -lA'
alias laa='ls --color=auto -la'
alias ll='ls --color=auto -l'
alias cp='cp -rpv'
alias mv='mv -v'
alias locate='locate -e -L'
alias mkdir='mkdir -p'
alias tree='tree -L 2 -d -l'
      # Root
alias wifi='sudo wifi-select wlan0'
alias abs='sudo abs'
alias updatedb='sudo updatedb'
alias sync='sudo sync'
alias reboot='sudo reboot'
alias shutdown='sudo shutdown -hP now'
alias lshw='sudo lshw'

# Package management
alias build='sudo pacbuilder -Sbkve'
alias autobuild='sudo pacbuilder -Sbkve --noconfirm'
alias fullupgrade='sudo abs && yaourt -Syu --aur --devel'
alias upgrade='yaourt -Syu --aur'
alias orphans='pacman -Qtdq'
alias paclist='pacman -Ql'
alias pacinfo='pacman -Qi'
alias pacfile='pacman -Qo'
alias syncinfo='pacman -Si'
alias pacfind='yaourt -Ss'
alias install='sudo pacman -S'
alias remove='sudo pacman -Rsc'
alias synchronise='sudo pacman -Syyuw && sudo abs'
alias upgrades='pacman -Qu'
alias deorphan='sudo pacman -Rsc $(pacman -Qtdq)'
alias pacgraph='pacgraph -b \#111111 -l \#ffffff -t \#eeeeee -d \#aaaaaa'
alias pacgroup='pacman -Qg'
alias pacgroups='pacman -Qg | sed "s/ .*//" | sort | uniq'

# Security
alias gpgasc='gpg -a --detach-sign'
alias xlock='xscreensaver-command -lock'
alias pw='echo `< /dev/urandom tr -cd "[:graph:]" | head -c8`'

# Maintenance
alias fixopera=' rm -r ~/.config/opera/{mail,lock}'

# Servers
alias sql='mysql -p -u root'
alias bssh='ssh barrucadu@nitti.dreamhost.com'
alias ussh='ssh uzbl@nitti.dreamhost.com'
alias pssh='ssh ofearcom@host181.hostmonster.com'
alias essh='ssh barrucadu@eihort'
alias bftp='ncftp barrucadu'
alias uftp='ncftp uzbl'
alias pftp='ncftp ofear'

# Git
alias grm='git rm'
alias g-='git rm'
alias g+='git add'
alias gc='git commit'

# Coding
alias val='valgrind --tool=memcheck --leak-check=full --show-reachable=yes'
alias gdb='gdb -ex run -ex backtrace --args'

# Miscellanious
alias aliases='cat ~/.config/zsh/aliases'
alias functions='cat ~/.config/zsh/functions'
alias rmatrix='cmatrix -C red -l -b'
alias mp3ogg='mp32ogg *.mp3 && rm *.mp3'
alias parts='cat /proc/partitions'
alias reload='source ~/.zshrc'
alias xreload='xrdb -load ~/.config/Xdefaults'
alias zen='fortune /usr/share/fortune/zen'
alias rfcdate='date --rfc-3339="seconds"'
alias screenx='screen -r `screen -ls | grep Detached | sed "s/(.*//"`'
