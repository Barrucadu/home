# Handlers
set history_handler    = /home/barrucadu/.config/uzbl/handlers/history.sh
set download_handler   = /home/barrucadu/.config/uzbl/handlers/download.sh
set cookie_handler     = /home/barrucadu/.config/uzbl/handlers/cookies.sh

# Interface
set fifo_dir           = /home/barrucadu/tmp/uzbl
set socket_dir         = /home/barrucadu/tmp/uzbl

# Behaviour
set always_insert_mode = 0
set modkey             = Mod1
set minimum_font_size  = 6
set default_font_size  = 12
set shell_cmd          = zsh -c %s ''

# Appearence
set show_status        = 1
set status_format      = <span font="DejaVu Sans Mono Bold 10"><span background="khaki" foreground="black">MODE</span> [<span weight="bold" foreground="red">KEYCMD</span>] <span foreground="#606060"> LOAD_PROGRESSBAR </span><span foreground="#99FF66">URI</span></span>
set status_background  = #303030
set status_top         = 0

# Browser Control
bind b  = back
bind m  = forward
bind S  = stop
bind r  = reload
bind +  = zoom_in
bind -  = zoom_out
bind t  = toggle_status
bind k  = exit
bind i  = insert_mode
bind ;_ = runcmd bind %s
bind :_ = runcmd %s

# Page Navigation
bind w  = scroll_vert  -50
bind a  = scroll_horiz -50
bind s  = scroll_vert   50
bind d  = scroll_horiz  50
bind .* = search %s
bind /  = search
bind >  = scroll_end
bind <  = scroll_begin

# Link Following
bind f_ = script window.location = document.links[%s].href;
bind F_ = script window.open (document.links[%s].href);
bind T  = script for (var i=0; i < document.links.length; i++) {var uzblid = 'uzbl_link_hint_';var li = document.links[i];var pre = document.getElementById(uzblid+i);if (pre) {li.removeChild(pre);} else {var hint = document.createElement('div');hint.setAttribute('id',uzblid+i);hint.innerHTML = i;hint.style.display='inline';hint.style.lineHeight='90%';hint.style.backgroundColor='red';hint.style.color='white';hint.style.fontSize='small-xx';hint.style.fontWeight='light';hint.style.margin='0px';hint.style.padding='2px';hint.style.position='absolute';hint.style.textDecoration='none';hint.style.left=li.style.left;hint.style.top=li.style.top;li.insertAdjacentElement('afterBegin',hint);}}

# Goto Bindings
bind gg = uri http://www.google.com/
bind gl = uri http://localhost/
bind gu = uri http://www.uzbl.org/
bind ,_ = uri %s
bind ?  = uri http://localhost/uzbl-bindings.php
bind !  = uri http://localhost/uzbl-code.php

# Search bindings
     # Search Engines
bind \g_ = uri http://www.google.com/search?q=%s
     # Wikis / References
bind \w_ = uri http://en.wikipedia.org/wiki/Special:Search?search=%s
bind \a_ = uri http://wiki.archlinux.org/index.php/Special:Search?search=%s&go=Go
bind \p_ = uri http://www.php.net/search.php?pattern=%s&show=quickref&x=0&y=0
bind \d_ = uri http://dictionary.reference.com/search?q=%s&x=0&y=0
bind \t_ = uri http://thesaurus.reference.com/search?q=%s&x=0&y=0
bind \u_ = uri http://uncyclopedia.org/wiki/Special:Search?search=%s&go=Go
bind \e_ = uri http://www.encyclopediadramatica.com/Special:Search?search=%s&go=Go
bind \b_ = uri http://www.biblegateway.com/keyword/?search=%s
bind \h_ = uri http://www.wikihow.com/Special:LSearch?fulltext=Search&search=%s
bind \U_ = uri http://www.urbandictionary.com/define.php?term=%s
bind \H_ = uri http://dothack.wikia.com/wiki/Special:Search?search=%s&go=1
     # Torrents
bind \P_ = uri http://thepiratebay.org/s/?q=%s&page=0&orderby=99
bind \M_ = uri http://www.mininova.org/search/?search=%s
bind \i_ = uri http://isohunt.com/torrents/?ihq=%s
     # Entertainment / Books
bind \m_ = uri http://www.imdb.com/find?s=all&q=%s&x=0&y=0
bind \A_ = uri http://www.amazon.co.uk/s/field-keywords=%s
bind \W_ = uri http://www.waterstones.com/waterstonesweb/simpleSearch.do?simpleSearchString=%s&searchType=0&Image1.x=0&Image1.y=0

# External Bindings
bind u = spawn /home/barrucadu/.config/uzbl/scripts/load_url_from_history.sh

# Netwok
set http_debug = 0
set useragent  = Uzbl [ Webkit WEBKIT_MAJOR.WEBKIT_MINOR.WEBKIT_MICRO ] [ Arch Linux KERNREL x86_64 ] [ Barrucadu/experimental: COMMIT ]
