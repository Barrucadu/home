;; -*-lisp-*-

(in-package :stumpwm)

;; General Setup
(set-prefix-key (kbd "C-z"))
(setf *startup-message*      nil
	  *mouse-focus-policy*     :click
    *window-border-style*    :none
    *normal-border-width*    0
    *maxsize-border-width*   0
    *transient-border-width* 0)
(run-commands "grename Main" "gnewbg Term" "gnewbg Misc-1" "gnewbg Misc-2" "gnewbg Misc-3")

;; Mode line et al
(set-font "-Misc-Fixed-Medium-R-SemiCondensed--13-120-75-75-C-60-ISO8859-1")
(set-bg-color "grey10")
(set-fg-color "red")
(set-border-color "red")
(set-msg-border-width 2)
 
(setf *message-window-gravity* :top-right
      *timeout-wait*           5
      *input-window-gravity*   :center)
  
(setf *mode-line-background-color* "black"
      *mode-line-foreground-color* "red"
      *mode-line-border-color*  "grey10"
      *mode-line-timeout*          1
      *mode-line-position* :top
      *window-format* "<%n%s%m%30t>"
      *screen-mode-line-format*
      (list "[^03%g^n] | "
       '(:eval (run-shell-command "date +\" [%Y-%m-%d %H:%M:%S]\" | tr -d '[:cntrl:]'" t))))
 
